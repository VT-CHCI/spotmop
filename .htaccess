# If you've pulled Spotmop via GitHub, you can run this using any webserver
# by navigating to localhost/test. Otherwise we'll redirect it to the Mopidy instance as per below

RewriteEngine On

# if we're /testing then use testing HTML file and stop there
RewriteRule ^testing$ /mopidy_spotmop/static/testing.html#$1 [NC,L]

# otherwise, redirect to the Tornado server (assuming using default port of 6680)
RewriteCond %{REQUEST_URI} !^/mopidy_spotmop
RewriteRule (.*) http://%{HTTP_HOST}:6680/spotmop/ [R=301,L]
